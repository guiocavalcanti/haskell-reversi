<!DOCTYPE HTML>
<html lang="en">
<head>
<meta charset="UTF-8">
<title></title>
<link href='http://fonts.googleapis.com/css?family=Carter+One' rel='stylesheet' type='text/css' />
<link media="all" rel="stylesheet" href="stylesheets/style.css" type="text/css" />
<script src="javascripts/jquery.js" type="text/javascript"></script>
<script src="javascripts/json.js" type="text/javascript"></script>
<script src="http://js.pusherapp.com/1.8/pusher.min.js"></script>
<script src="javascripts/app.js" type="text/javascript"></script>
<script type="text/javascript">
  $(function(){
    Pusher.log = function(message) {
      if (console && console.log) console.log(arguments);
    }

    var pusher = new Pusher('61be5260c07cf1d9e396');
    var channel = pusher.subscribe("private-<%= @room[:id] %>");

    var options = {
      player : "<%= @room[:color] %>",
      room_id : "<%= @room[:id] %>",
      board : $.parseJSON(<%= @room[:board] %>),
    }

    $("#board").multiplayer($.extend(options, { channel : channel }));
  });
</script>
</head>
<body>
<span class="logo">Reversi</span>
<span class="slogan">A simple and extremely naive haskell implementation of reversi game</span>
<div id="board"></div>
